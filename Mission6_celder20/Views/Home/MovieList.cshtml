@{
    ViewData["Title"] = "Movie List";
}

@model List<ApplicationResponse> 

<table class="table table-bordered table-striped table-light>
    <thead class="font-weight-bold">
        <td>Category</td>
        <td>Title</td>
        <td>Director</td>
        <td>Year</td>
        <td>Rating</td>
        <td>Edited</td>
        <td>Lent To</td>
        <td>Notes</td>
    </thead>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category.CategoryName</td>
                    <td>@x.Title</td>
                    <td>@x.Director</td>
                    <td>@x.Year</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>

                    @*Establishing the ids to delete or edit a record*@
                    <td><a asp-controller="Home" asp-action="Edit" asp-route-appid="@x.AppId">Edit</a></td>
                    <td><a asp-controller="Home" asp-action="Delete" asp-route-appid="@x.AppId">Delete</a></td>
                </tr>
            }
    </tbody>
</table>
